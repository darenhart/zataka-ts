{
  "name": "zatacka-ts",
  "version": "2.0.0",
  "description": "Zatacka (Achtung, die Kurve) - Classic DOS game remake in TypeScript with HTML5 Canvas",
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darenhart/zataka-ts.git"
  },
  "keywords": [
    "game",
    "canvas",
    "typescript",
    "zatacka",
    "achtung-die-kurve",
    "multiplayer",
    "html5"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/darenhart/zataka-ts/issues"
  },
  "homepage": "https://darenhart.github.io/zataka-ts/",
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.1",
    "@vitest/ui": "^4.0.18",
    "gh-pages": "^6.2.0",
    "jsdom": "^28.0.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}
